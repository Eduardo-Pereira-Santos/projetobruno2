<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".teladois">

    <TextView
        android:id="@+id/tituloPedido"
        android:layout_width="349dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="DESCULPAS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/botaoGerarPedido"
        android:layout_width="213dp"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="PEDIDO"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <TextView
        android:id="@+id/resultadoPedido"
        android:layout_width="362dp"
        android:layout_height="156dp"
        android:gravity="center"
        android:text="Pedido:"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.28" />

    <TextView
        android:id="@+id/tituloPresente"
        android:layout_width="361dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="PRESENTE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/botaoGerarPresente"
        android:layout_width="234dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:text="PRESENTE"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.61" />

    <TextView
        android:id="@+id/resultadoPresente"
        android:layout_width="330dp"
        android:layout_height="96dp"
        android:gravity="left"
        android:text="Presente:"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.768" />

</androidx.constraintlayout.widget.ConstraintLayout>